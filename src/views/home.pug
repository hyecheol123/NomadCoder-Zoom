doctype html 
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    script(src="/socket.io/socket.io.js")
    title Zoom Clone 
  body 
    header 
      h1 Zoom Clone
    main
      div#welcome
        form
          // Join room when the room exists, otherwise create and join
          input(placeholder="room name", required, type="text")
          button Enter Room
      div#room
        h3
        ul
        form
          input(placeholder="message", required, type="text")
          button Send
    script(async src="public/js/app.js")