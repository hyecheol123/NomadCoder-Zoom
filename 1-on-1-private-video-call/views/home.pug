doctype html 
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
    link(rel="stylesheet", href="public/css/style.css")
    script(src="socket.io/socket.io.js")
    title 1-on-1 Private Video Call
  body 
    main
      div#welcome
        h1 1:1 Private Video Call
        h3 Enter nickname and room name to start 
        form
          div 
            span Nickname: 
            input#nickname(placeholder="nickname", required, type="text", maxlength='15')
          div
            span Room:
            input#room-name(placeholder="room name", required, type="text")
          button Join Room
        div#alert
          span#message
      div#call
        div#call-content
          div#stream-wrapper
            div#myStream.stream
              video#myVideo(autoPlay, playsinline)
              span#myNickname
              select#camera-selection
            div#peerStream.stream
              video#peerVideo(autoPlay, playsinline)
              span#peerNickname
            div#chat-wrapper(style={display: 'none'}) 
              div#chat-content-wrapper
              form#chat-input
                textarea(placeholder="Press Enter To Send Message", required)
          div#control
            button#mute <i class="fas fa-microphone-slash"></i>
            button#camera <i class="fas fa-video-slash"></i>
            button#hang-up <i class="fas fa-phone-slash"></i>
            button#chat-button <i class="fas fa-comments"></i>
        div#confirm-join-overlay.modal-overlay
          div#confirm-join.modal
            span#request-nickname
            span#confirm-message
            button#approve Approve
            button#decline Decline
        div#disconnected-peer-overlay.modal-overlay
          div#disconnected-peer.modal
            span
              b Remote peer disconnected.
            span Do you want to leave the room or wait for the other peer to join?
            button#leave-room Leave room
            button#stay-room Stay
    script(async src="public/js/app.js")